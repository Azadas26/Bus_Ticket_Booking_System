<div class="container-fluid" id="#proform" style="background-image: url(/addimage/new.png);background-attachment: fixed;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        height: 100vh;">
    <div class="row p-5">
        <div class="col-md-8 m-auto pt-5">
            <div class="pt-5">
                <div id="myForm" class="p-4 mt-5 p-5"
                    style="box-shadow: #a1aff2 0px 8px 24px, #bec7f2 0px 16px 56px, #e2e3e7 0px 24px 80px;">
                    <h1 id="hding" style="text-align: center;font-family: sans-serif;font-weight: 800;"
                        class="mt-2 p-3">
                        <b>ADD YOUR OWN CHECKERS</b>
                    </h1>
                    <form id="proform" class="d-flex" action="/addchecker" method="post" enctype="multipart/form-data"
                        style="padding-top: 20px;font-weight: 800;">
                        <div class="form-inputs w-50">
                            <div class="form-group">
                                <label for="bname">Checker Name</label>
                                <input type="text" name="name" class="form-control" placeholder="Name" required>
                            </div>
                            <div class="form-group">
                                <label for="busnumber">Username (For Login)</label>
                                <input type="text" name="uname" class="form-control" placeholder="BA@AZ123" required>
                            </div>
                            <div class="form-group">
                                <label for="stime">Phone Number</label>
                                <input type="number" name="ph" class="form-control" placeholder="+91 95XXXXXX76"
                                    required>
                            </div>
                            <div class="form-group">
                                <label for="stime">Password (For Login)</label>
                                <input type="password" name="password" class="form-control" required>
                            </div>
                            {{#if added}}
                            <div class="form-group">
                                <label class="m-4" style="color: green;">Checker Successfully Added...</label>
                            </div>
                            {{/if}}
                        </div>
                        <div class="profile-upload ml-5 w-50 text-center">
                            <div class="form-group">
                                <label for="stime">Checker Image</label>
                                <div class="profile-img-container">
                                    <div class="file-input-wrapper">
                                        <input type="file" name="image" id="file-input" class="form-control-file"
                                            accept="image/*" required onchange="loadFile(event)">
                                        <label for="file-input" class="file-input-label">Choose File</label>
                                    </div>
                                    <img id="profileImage" src="#" alt="Profile Image" class="profile-img m-5"
                                        style="display: none;height: 1000px;">
                                    <button id="submitButton" type="submit" class="btn btn-primary text-light mt-5 mb-5"
                                        style="font-weight: 800; width: 100%;">Submit</button>
                                    <a href="/viewchecker" class="pt-5">View Checkers</a>
                                </div>
                            </div>
                        </div>

                    </form>

                    <div class="typing-effect text-center" id="typingEffect" style="width: 100%;">
                        <!-- Text will be dynamically inserted here -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
 

     #myForm {
        opacity: 0;
        /* Initially hide the form */
        transform: rotateX(90deg) translateY(-100%);
        /* Start with the form rolled up and off-screen */
        animation: slideInFromTop 2s ease-in-out forwards;
    }

    @keyframes slideInFromTop {
        0% {
            opacity: 0;
            transform: rotateX(90deg) translateY(-100%);
        }

        50% {
            opacity: 0.5;
            transform: rotateX(-20deg) translateY(10%);
        }

        100% {
            opacity: 1;
            transform: rotateX(0deg) translateY(0);
        }
    }

    input {
        font-weight: 800;
    }

    label {
        font-weight: 800;
    }

    #hding {
        text-align: center;
        font-family: sans-serif;
        font-weight: 800;
        text-shadow: 2px 2px 4px rgba(66, 94, 237, 0.8);
    }

    .form-inputs,
    .profile-upload {
        flex: 1;
    }

    .profile-img-container {
        text-align: center;
        margin-top: 20px;
    }

    .profile-img {
        max-width: 150px;
        max-height: 150px;
        margin-bottom: 10px;
        display: block;
    }

    .file-input-wrapper {
        position: relative;
        overflow: hidden;
        display: inline-block;
    }

    .file-input-label {
        border: 1px solid #007bff;
        color: white;
        background-color: #007bff;
        padding: 8px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    .form-control-file {
        position: absolute;
        left: 0;
        top: 0;
        opacity: 0;
    }

    .typing-container {
        width: 100%;
        text-align: center;
        font-family: sans-serif;
        font-size: 10px;
        display: inline-block;
    }

    .typing-effect {
        display: inline-block;
    }

    .char {
        display: inline-block;
        opacity: 0;
        animation: typing 1s forwards;
        color: rgba(66, 94, 237, 0.8);
        font-weight: 800;
    }

    @keyframes typing {
        to {
            opacity: 1;
        }
    }
</style>

<script>
    function loadFile(event) {
        var image = document.getElementById('profileImage');
        image.src = URL.createObjectURL(event.target.files[0]);
        image.style.display = 'block';
    }
</script>