<div class="video-container">
    <a href="/about">
        <img class="img-fluid" id="userbackground-image" src="/home/More Than you Should (2).png" style="width: 100%;height: 100vh;display: none;">
    </a>
    <video id="userbackground-video" autoplay loop muted style="display: none;">
        <source src="/home/TS (2).mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
</div>

<script>
    const userAgent = navigator.userAgent;

    // Regular expressions for mobile, tablet, and desktop detection
    const mobileRegex = /Android|webOS|iPhone|iPod|BlackBerry|IEMobile|Opera Mini/i;
    const tabletRegex = /iPad|Android(?!.*Mobile)/i; // Android tablets usually don't have "Mobile" in userAgent
    const desktopRegex = /Win|Mac|Linux|X11/i;

    if (mobileRegex.test(userAgent) || tabletRegex.test(userAgent)) {
        tabormobile();
    } else if (desktopRegex.test(userAgent)) {
        desctporother();
    } else {
        desctporother();
    }

    function tabormobile() {
        var img = document.getElementById('userbackground-image');
        var video = document.getElementById('userbackground-video');
        
        setTimeout(() => {
            video.style.display = 'none';
            img.style.display = '';
        }, 100);
    }

    function desctporother() {
        var img = document.getElementById('userbackground-image');
        var video = document.getElementById('userbackground-video');
        video.style.display = '';
        setTimeout(() => {
            video.style.display = 'none';
            img.style.display = '';
        }, 5000);
    }

    // Change image src based on screen width
    function updateImageSrc() {
        var img = document.getElementById('userbackground-image');
        if (window.innerWidth >= 1000) {
            img.src = "/home/TS (1).png";
        } else {
            img.src = "/home/More Than you Should (2).png";
        }
    }

    // Call updateImageSrc on load and on window resize
    updateImageSrc();
    window.addEventListener('resize', updateImageSrc);
</script>

<style>
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        overflow: hidden; /* Prevent any overflow */
    }

    .video-container {
        position: fixed; /* Ensure the container stays fixed in the viewport */
        top: 0;
        left: 0;
        width: 100vw; /* Full viewport width */
        height: 100vh; /* Full viewport height */
        overflow: hidden;
        background-color: white; /* Ensures the background is white */
    }

    #background-video {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
    }
</style>
