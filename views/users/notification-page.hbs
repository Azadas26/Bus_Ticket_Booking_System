<div class="container-fluid" style="height: 100vh;">
    <div class="row pl-5 pr-5 pt-5">
        <div class="col-md-6 m-auto p-4">

            {{#if info}}
            {{#each info}}

            <div class="col-md-12  message-box mt-5"
                style="border-radius: 55px 10px; box-shadow: #a1aff2 0px 8px 24px, #bec7f2 0px 16px 56px, #e2e3e7 0px 24px 80px;">
                <div style="width: 100%;" class="text-center">
                    <h3><b>BUS CANCELED</b></h3>
                </div>
                <!-- Added offset-md-6 to align to the right -->
                <div class="mt-3 text-center">
                    <h5 class="text-dark ml-5">{{bus.bname}}</h5>
                    <h5 class="text-dark ml-5">{{bus.busnumber}}</h5>
                    <h5 class="text-dark ml-5">{{bus.lino}}</h5>
                    <h5 class="text-dark ml-5">STARTING &nbsp;&nbsp;FROM &nbsp;&nbsp;{{bus.sdate}} &nbsp;&nbsp;TO
                        &nbsp;&nbsp; {{bus.edate}}</h5>
                    {{#each message}}
                    <div class="m-5 p-4"
                        style="box-shadow: rgba(0, 0, 0, 0.12) 0px 1px 3px, rgba(0, 0, 0, 0.24) 0px 1px 2px;">
                        <p class="text-dark">{{this.rep1}}</p>
                        <p class="text-dark">{{this.rep2}}</p>
                        <p class="text-dark">{{this.rep3}}</p>
                        <p class="text-dark">{{this.rep4}}</p>
                        <p class="text-dark">{{this.message}}</p>
                        <p class="text-dark" style="font-weight: 100;text-align: right;">{{this.date}}</p>

                    </div>
                    {{/each}}

                </div>
            </div>

            {{/each}}
            {{else}}
            <div class="m-5 p-5">
                <h1 class="text-dark m-5"><b>NOTHING FOUND</b></h1>
            </div>
            {{/if}}
            <p id="end"></p>
        </div>
    </div>

    <style>
        p {
            font-weight: 800;
        }

        h5 {
            font-weight: 800;
        }

        h4 {
            font-weight: 800;
        }

        .message-box {
            width: 800px;
            padding: 10px;
            border-radius: 10px;
            position: relative;
            color: white;
        }
    </style>