<script>
    function toggleChatPopup() {

        var popup = document.getElementById("chatPopup");
        var overlay = document.getElementById("overlay");
        var button = document.querySelector(".chat-button");

        if (popup.style.display === "block") {
            console.log("hiii")
            popup.style.display = "none";
            overlay.style.display = "none";
            button.classList.remove("clicked");
        } else {
            popup.style.display = "block";
            overlay.style.display = "block";
            button.classList.add("clicked");
            $.ajax({
                url: '/adminchatview',
                method: 'get',
                success: (response) => {
                    var chatContainer = document.getElementById('chatMessages');
                    response.replay.message.forEach(i => {

                        var messageElement = document.createElement('div');
                        messageElement.className = 'message';

                        if (i.fromadmin) {
                            messageElement.classList.add('left');
                            messageElement.innerHTML = i.chat;
                        } else {
                            messageElement.classList.add('right');
                            messageElement.innerHTML = i.chat;
                        }

                        chatContainer.appendChild(messageElement);
                    })
                    chatContainer.scrollTop = chatContainer.scrollHeight;
                }
            })

        }
    }

    function closeChatPopup() {

        var popup = document.getElementById("chatPopup");
        var overlay = document.getElementById("overlay");
        var button = document.querySelector(".chat-button");

        popup.style.display = "none";
        overlay.style.display = "none";
        button.classList.remove("clicked");
        setTimeout(() => {
            location.reload()
        }, 1500)
    }

    function sendMessage() {
        var message = document.getElementById("chatInput").value.trim();
        if (message !== "") {

            $.ajax({
                url: '/adminchat',
                method: 'post',
                data: { chat: message },
                success: (response) => {
                    console.log(response);
                    if (response.status) {
                        console.log(response.status)
                        document.getElementById("chatPopup").style.display = "none";
                        document.getElementById("chatInput").value = "";
                        toggleChatPopup()
                    }
                }
            })
        }
    }
    $.ajax({
        url: '/isadminmesagearraived',
        method: 'get',
        success: (response) => {
            console.log(response);
            if (response.status) {
                startBounceAnimation(ctbtn);
            } else {
                stopBounceAnimation(ctbtn);
            }
        }
    })

    function startBounceAnimation(element) {
        element.animate([
            { transform: 'translateY(0)' },
            { transform: 'translateY(-30px)' },
            { transform: 'translateY(0)' }
        ], {
            duration: 1000,
            iterations: Infinity
        });
    }

    function stopBounceAnimation(element) {
        element.getAnimations().forEach(animation => animation.cancel());
    }
</script>
