<div class="container-fluid" style="background-color: #15181e;">
    <div class="row">
        <div class="col-md-12" id="signuppage">
            <div class="form-container p-5" style="width: auto;box-shadow: #3e54e4 0px 5px 15px;">
                <div style="width: 100%;" class="text-center">
                    <h1 class="text-light" style=" text-shadow: 2px 2px 4px rgba(0, 42, 255, 0.8); "><b>Switch To Your Account</b></h1>
                </div>
                <form action="/suser/login" method="post" class="text-light"> 
                    {{#if logerr}}
                    <h5 class="text-danger"><i>Incorrect Username or Password</i></h5>
                    {{/if}}
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" name="email" class="form-control" id="exampleInputEmail1"
                            aria-describedby="emailHelp" placeholder="Enter email">
                        <small style="font-weight: 800;" id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input name="password" type="password" class="form-control" id="exampleInputPassword1"
                            placeholder="Password">
                    </div>
                     <div class="form-group" style="text-align: right;">
                    <a href="/suser/signup" class="" style="cursor: pointer;"><b>Create Your Account...</b></a>
                </div>
                    <button style="background-color: #3e54e4; width: 100%;font-weight: 800;" type="submit" class="btn btn-primary mt-3">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    #signuppage {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-container {
        width: 100%;
        max-width: 500px; /* Adjust max-width as needed */
        animation: fadeInLeft 2s ease-out; /* Animation applied */
    }

    @keyframes fadeInLeft {
        0% {
            opacity: 0;
            transform: translateX(-20px);
        }
        100% {
            opacity: 1;
            transform: translateX(0);
        }
    }
</style>
