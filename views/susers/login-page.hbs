        position: relative;
       
    }

    #password {
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
    }

    .eye-icon {
        position: absolute;
        right: 10px;
        top: 67%;
        transform: translateY(-50%);
        cursor: pointer;
    }

    #signuppage {
        height: 100vh;
        display: flex;
